{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "dist",
        "examples",
        "**/*.test.ts",
        "**/*.spec.ts",
        "coverage",
        "build",
        "eslint.config.ts",
        "stylelint.config.ts"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs",
            "moduleResolution": "node"
        }
    }
}
